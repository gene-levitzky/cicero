<html>
    <head>
        <link rel="stylesheet" href="/css/global.css" />
        <style type="text/css" title="currentStyle">
          @import "/css/bootstrap.min.css";
          @import "/css/global.css";
        </style>
        <style>
          .nav li a{
            color: #000;
            border: 1px solid #000;
            font-weight: bold;
          }
          .nav li a:hover {
            color: #fff;
          }
          .tab-content, .nav{
            margin-top: 50px;
            width: 800px;
          }
          .tab-pane {
            padding: 25px;
          }
          #bio {
            border-left: 1px solid #000;
            border-right: 1px solid #000;
            border-radius: 5px;
            color: #000;
            height: 20px;
            padding-top: .5em;
            padding-bottom: .5em;
            width: 800px;
          }
          #bio p {
            padding-left: 2em;
          }
          .tab-pane-heading {
            border-bottom: 1px #000 dashed;
            color: #000; 
            font-size: 24px; 
            font-weight: bold;
            text-align: center; 
          }
          #character-table, #character-table th {
            border: 1px #000 dashed;
            color: #000;
            margin-top: 15px;
            margin-bottom: 15px;
            padding: 15px;
          }
        </style>
        <script src="/javascript/jquery-1.10.1.js"></script>
        <script src="/javascript/bootstrap.min.js"></script>
        <script src="/javascript/global.js"></script>
        <script>
            $( function () {
                $('#home-nav a').click(function (e) {
                    e.preventDefault();
                    $(this).tab('show');
                });
            });
        </script>
        <title><%= user.username %>'s Home Page</title>
    </head>
    
    <body>
        <div id="wrapper" class="container">
            <div class="heading container">
                Cicero
            </div>
            <% if (newUser) { %>
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Welcome to Cicero, <%= user.username %>!</strong>
                </div>
            <% } %>
            <ul class="nav nav-tabs" id="home-nav">
                <li class="active"><a href="#home">Home</a></li>
                <li><a href="#characters">Characters</a></li>
                <li><a href="#profile">Profile</a></li>
                <li><a href="#messages">Messages</a></li>
                <li><a href="#settings">Settings</a></li>
            </ul>
            
            <div id="bio" class="container">
                <p><small>Welcome to Cicero, <%= user.username %>.</small></p>
            </div>

            <div class="tab-content container">
                <div class="tab-pane active" id="home"></div>
                <div class="tab-pane" id="characters">
                    <div class="tab-pane-heading">
                        <p>Your Characters</p>
                    </div>
                    <table id="character-table">
                        <thead>
                            <tr>
                                <th>Character</th>
                                <th>ID</th>
                                <th>Login</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <% for (var id in characters) { %>
                            <tr>
                                <th><%= characters[id].name %></th>
                                <th><%= id %></th>
                                <th><a href="#" class="btn btn-success">Login</a></th>
                                <th><a href="#" class="btn btn-danger">Delete</a></th>
                            </tr>
                        <% } %>
                    </table>
                    <a href="/new-character" class="btn btn-info"><strong>+</strong> Create New Character</a>
                </div>
                <div class="tab-pane" id="profile"></div>
                <div class="tab-pane" id="messages"></div>
                <div class="tab-pane" id="settings"></div>
            </div>
        </div>
    </body>
</html>